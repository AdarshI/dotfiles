#!/bin/sh

# This script is called on startup to remap keys.
# Increase key speed via a rate change
xset r rate 300 50

# Swap the caps lock and escape key...
# setxkbmap -option caps:swapescape

# Map the caps lock key to super...
setxkbmap -option caps:super
# and the escape key to caps lock
setxkbmap -option escape:caps
# But when it is pressed only once, treat it as escape.
killall xcape 2>/dev/null ; xcape -e 'Super_L=Escape'

# Reverse Scrolling Direction
xinput --set-prop "SYNA8008:00 06CB:CE58 Touchpad" "libinput Natural Scrolling Enabled" 1
# Enable Touchpad Tap-to-Click support
xinput --set-prop "SYNA8008:00 06CB:CE58 Touchpad" "libinput Tapping Enabled" 1

ibus-daemon -d
